record(ao, "$(P)$(R)PT901_SP_FLUSH") {
    field(DESC, "S7 PLC Gas PT901 SP Flush")
    field(DTYP, "OPCUA")
    field(OUT,  "@$(SUBS) ns=4;i=37 monitor=n")
    field(LOPR, "0.0")
    field(HOPR, "15.0")
    field(EGU, "Bar")
    field(PREC, "2")
}

record(ao, "$(P)$(R)PT901_FLUSH_ZERO") {
    field(DESC, "S7 PLC Gas PT901 Flush Zero Check")
    field(DTYP, "OPCUA")
    field(OUT,  "@$(SUBS) ns=4;i=36 monitor=n")
    field(LOPR, "0.0")
    field(HOPR, "2.0")
    field(EGU, "Bar")
    field(PREC, "2")
}

