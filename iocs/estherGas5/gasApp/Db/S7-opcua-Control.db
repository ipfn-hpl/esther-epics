record(bo, "$(P)$(R)CONTROL-ON")
{
    field(DESC, "S7PLC Gas ABORT Control")
    field(DTYP, "OPCUA")
# monitor y (default)     /output record gets biderectional
    field(OUT,  "@$(SUBS) ns=4;i=113 monitor=y")
    field(ZNAM, "OFF")
    field(ONAM, "ON")
}
