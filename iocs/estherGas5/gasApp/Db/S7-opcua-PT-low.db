record(ao, "$(P)$(R)PT101-LOW") {
    field(DESC, "S7 PLC Gas PT101 LOW Alarm")
    field(DTYP, "OPCUA")
# monitor y (default)     /output record gets biderectional
    field(OUT,  "@$(SUBS) ns=4;i=30 monitor=y")
    field(LOPR, "0.0")
    field(HOPR, "90.0")
    field(EGU, "Bar")
    field(PREC, "2")
}
