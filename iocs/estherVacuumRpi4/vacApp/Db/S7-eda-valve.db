#####         PLC  Bit Tags     ############
# Operational bits
record(bo, "$(P)$(R):Valve")
{
        field(DTYP, "s7nodave")
        field(OUT, "@vacPLC Q1.1")
        field(DESC, "S7 PLC EDA_VALVE Solenoid")
#        field(UDF,1)
        field(ZNAM, "OFF")
        field(ONAM, "ON")
        field(VAL, "0")
        field(PINI, "YES")
}
record(bi, "$(P)$(R):Valve_LS1_ON")
{
        field(DESC, "S7 PLC EDA_VALVE LS1 ON")
        field(DTYP, "s7nodave")
        field(SCAN, "I/O Intr")
        field(INP, "@vacPLC(PG=fast) I0.0")
        field(ZNAM, "OFF")
        field(ONAM, "ON")
}
record(bi, "$(P)$(R):Valve_LS1_OFF")
{
        field(DESC, "S7 PLC EDA_VALVE LS1 ON")
        field(DTYP, "s7nodave")
        field(SCAN, "I/O Intr")
        field(INP, "@vacPLC(PG=fast) I0.1")
        field(ZNAM, "OFF")
        field(ONAM, "ON")
}
