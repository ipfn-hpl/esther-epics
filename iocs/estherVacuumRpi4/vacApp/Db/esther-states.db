# record for bit leds
record(calc, "$(P)$(R)OPCALCSTATE") {
    field(DESC, "Pulse Calculated State")
    field(CALC,"2^A")
    #field(SCAN,"1 second")
    field(INPA,"$(P)$(R)OPSTATE.VAL NPP NMS")
}

