record(ai, "$(P)$(R):PT-DT-Static")
{
        field(DESC, "S7 DT Static Pressure in mbar")
        field(SCAN, "I/O Intr")
        field(DTYP, "s7nodave")
        field(INP, "@vacPLC(PG=default) IW64 uint16")
        field(LOPR, "0.0")
        field(HOPR, "1400.0")
        field(HIHI, "1050.0")
        field(HHSV, "MAJOR")
        field(HIGH, "900.0")
        field(HSV, "MINOR")
        field(MDEL, "1.0")
        field(ADEL, "2.0")
        field(LINR, "SLOPE")
# 0.000362/0.509 (R)
        field(ASLO, "0.0007112")
        field(AOFF, "0.0")
        field(AOFF, "-4.0")
#p(mbar) = (Iout(mA)-4) * 175/2
        field(ESLO, "87.5")
        field(EOFF, "0.0")
        field(EGU, "mbar")
        field(PREC, "2")
}
